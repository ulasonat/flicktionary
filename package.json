{
  "name": "flicktionary",
  "version": "1.0.0",
  "description": "Learn English vocabulary through video context",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --mode development",
    "build:renderer": "webpack --mode production",
    "build:main": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:main && npm run copy:preload",
    "copy:preload": "cp src/main/preload.js dist/preload.js",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.flicktionary.app",
    "productName": "Flicktionary",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "png/flicktionary_logo.png"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^24.0.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^4.4.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "video.js": "^8.6.0"
  }
}
